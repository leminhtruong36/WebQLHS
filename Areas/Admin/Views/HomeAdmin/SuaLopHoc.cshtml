@model WebQLHS.Models.Lop
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chỉnh sửa danh sách lớp học";
}

<h1>Chỉnh sửa danh sách lớp học</h1>

<h4>Lớp học</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaLopHoc" method="post">
            <input type="hidden" asp-for="MaLopHoc" />
            <div class="form-group">
                <label asp-for="MaLopHoc" class="control-label"></label>
                <input asp-for="MaLopHoc" class="form-control" disabled />
                <span asp-validation-for="MaLopHoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenLop" class="control-label"></label>
                <input asp-for="TenLop" class="form-control" />
                <span asp-validation-for="TenLop" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SiSo" class="control-label"></label>
                <input asp-for="SiSo" class="form-control" />
                <span asp-validation-for="SiSo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSachLopHoc">Back to List</a>
</div>
