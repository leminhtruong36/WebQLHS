@using WebQLHS.Models;
@model IEnumerable<HocSinh>

@{
    ViewData["Title"] = "Điểm Danh";
}

<h1>Điểm Danh</h1>

@using (Html.BeginForm("Check", "DiemDanh", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Chọn lớp học:")
        @Html.DropDownList("maLopHoc", ViewBag.LopList as SelectList, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Chọn ngày điểm danh:")
        @Html.TextBox("ngayDiemDanh", null, new { @class = "form-control datepicker", type = "date" })
    </div>

    <button type="submit" class="btn btn-primary">Điểm Danh</button>
}
