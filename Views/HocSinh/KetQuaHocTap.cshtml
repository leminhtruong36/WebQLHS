@model DiemHocSinhViewModel

@{
    ViewBag.Title = "In điểm học sinh";
}
<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid black;
    }

    th, td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>
<h2>Điểm của học sinh - @Model.HoTen</h2>

<body class="table">
    <table>
        <tr>
            <th>Môn học</th>
            <th>Điểm số</th>
        </tr>  
        @foreach (var diem in Model.DiemMonHocs)
        {
            <tr>
                <td>@diem.TenMonHoc</td>
                <td>@diem.DiemSo</td>
            </tr>
        }
    </table>
</body>
