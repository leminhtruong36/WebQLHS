@model WebQLHS.Models.HocSinh

@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
}
<h2>Thông Tin Cá Nhân - @Model.HoTen</h2>

<div>
    <h4>Học Sinh</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã HS :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaHs)
        </dd>
        <dt class="col-sm-2">
            Họ Tên :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            Giới Tính :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            Địa Chỉ :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiaChi)
        </dd>
        <dt class="col-sm-2">
            Ngày Sinh :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            Email :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailHocSinh)
        </dd>
        <dt class="col-sm-2">
            Mã Lớp Học :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaLopHoc)
        </dd>
    </dl>
</div>