@model IEnumerable<WebQLHS.Models.Lop>

@{
    ViewData["Title"] = "Danh sách lớp học";
}
<link href="~/css/style.css" rel="stylesheet" />

<div class="container">
    <h1>Danh sách lớp học</h1>

    <p style="color:white">
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaLopHoc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenLop)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SiSo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaLopHoc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLop)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SiSo)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaLopHoc.Trim()">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaLopHoc.Trim()">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaLopHoc.Trim()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
